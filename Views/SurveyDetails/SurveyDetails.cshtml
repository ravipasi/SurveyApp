@section Scripts {
    <script src="~/js/survey-details.js"></script>
    <script src="~/js/camera-remarks.js"></script>
    <script src="~/js/item-master-selection.js"></script>
    <script>
        // Initialize survey details with Razor-generated URLs
        initSurveyDetails(
            '@Url.Action("GetLocationPreview", "SurveyDetails")',
            '@Url.Action("SubmitLocationCompletion", "SurveyDetails")',
            '@Url.Action("UnlockLocationForEditing", "SurveyDetails")',
            @((ViewBag.IsCompleted ?? false).ToString().ToLower()),
            $('input[name="__RequestVerificationToken"]').val()
        );

        // Initialize Cloudinary uploader with URLs and IDs
        if (typeof initItemMasterSelection === 'function') {
            var surveyIdForUpload = @(Model?.FirstOrDefault()?.SurveyID ?? 0);
            var locIdForUpload = @(Model?.FirstOrDefault()?.LocID ?? 0);
            initItemMasterSelection(
                '@Url.Action("UploadBase64Image", "Cloudinary")',
                '@Url.Action("DeleteImage", "Cloudinary")',
                surveyIdForUpload,
                locIdForUpload
            );
        }

        $(document).ready(function () {
            let itemIndex = 0; // This will be a counter for unique indices

            function findItemInData(itemId) {
                if (typeof allItemsData !== 'undefined' && Array.isArray(allItemsData)) {
                    return allItemsData.find(d => (d.ItemID || d.itemID) == itemId);
                }
                return null;
            }

            function renderItemForm(item, prepend = false) {
                var template = $('#item-form-template').html();

                const itemID = item.ItemID || item.itemID;
                let itemName = item.ItemName || item.itemName;
                let itemCode = item.ItemCode || item.itemCode;
                let isCamera = item.IsCamera || item.isCamera;
                const itemQtyExist = item.ItemQtyExist || item.itemQtyExist;
                const itemQtyReq = item.ItemQtyReq || item.itemQtyReq;
                const remarks = item.Remarks || item.remarks;
                const cameraRemarksJson = item.CameraRemarksJson || item.cameraRemarksJson;

                if (!itemName) {
                    const fullItemData = findItemInData(itemID);
                    if (fullItemData) {
                        itemName = fullItemData.itemName;
                        itemCode = fullItemData.itemCode;
                        isCamera = fullItemData.isCamera;
                    }
                }

                template = template.replace(/{index}/g, itemIndex);
                template = template.replace(/{itemId}/g, itemID);
                template = template.replace(/{itemName}/g, itemName || `Item ID: ${itemID}`);
                template = template.replace(/{itemCode}/g, itemCode || '');
                template = template.replace(/{itemQtyExist}/g, itemQtyExist || 0);
                template = template.replace(/{itemQtyReq}/g, itemQtyReq || 0);
                template = template.replace(/{remarks}/g, remarks || '');
                template = template.replace(/{isCamera}/g, isCamera || false);
                
                // Clear placeholder and set value via .val() to handle encoding
                template = template.replace('value="{cameraRemarksJson}"', 'value=""');

                var newElement;
                if (prepend) {
                    $('#selected-items-container').prepend(template);
                    newElement = $('#selected-items-container').children().first();
                } else {
                    $('#selected-items-container').append(template);
                    newElement = $('#selected-items-container').children().last();
                }

                const cameraRemarksJsonString = cameraRemarksJson ? (typeof cameraRemarksJson === 'string' ? cameraRemarksJson : JSON.stringify(cameraRemarksJson)) : '[]';
                newElement.find('.camera-remarks-json').val(cameraRemarksJsonString);

                var totalQty = (itemQtyExist || 0) + (itemQtyReq || 0);
                if (totalQty > 0) {
                    newElement.find('.cam-extra-section').show();
                }
                if (isCamera) {
                    newElement.find('.camera-remarks-section').show();
                }

                if (typeof updateCameraRemarksUI === 'function') {
                    updateCameraRemarksUI(itemIndex);
                }

                itemIndex++;
            }

            function initializeItemSelection() {
                if (typeof selectedItemsData !== 'undefined' && selectedItemsData.length > 0) {
                    selectedItemsData.forEach(function(item) {
                        renderItemForm(item, false);
                    });
                }
            }

            $('body').on('click', '.load-item-selection', function () {
                var button = $(this);
                var surveyId = button.data('surveyid');
                var locId = button.data('locid');
                var itemTypeId = button.data('itemtypeid');
                var targetSelector = button.data('target');
                var targetContainer = $(targetSelector);

                targetContainer.html('<div class="text-center"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');

                $.ajax({
                    url: '@Url.Action("GetItemSelectionPartial", "SurveyDetails")',
                    type: 'GET',
                    data: { surveyId: surveyId, locId: locId, itemTypeID: itemTypeId },
                    success: function (response) {
                        targetContainer.html(response);
                        button.closest('.text-center').hide();
                        initializeItemSelection();
                    },
                    error: function () {
                        targetContainer.html('<div class="alert alert-danger">Error loading content. Please try again.</div>');
                    }
                });
            });

            $('body').on('click', '#add-item-btn', function() {
                var selectedItemId = $('#add-item-dropdown').val();
                if (!selectedItemId) {
                    Swal.fire('No Item Selected', 'Please select an item from the dropdown to add.', 'warning');
                    return;
                }
                var selectedOption = $('#add-item-dropdown option:selected');
                var item = {
                    ItemID: selectedItemId,
                    ItemName: selectedOption.data('itemname'),
                    ItemCode: selectedOption.data('itemcode'),
                    IsCamera: selectedOption.data('iscamera') === 'True' || selectedOption.data('iscamera') === true,
                    ItemQtyExist: 0,
                    ItemQtyReq: 1,
                    Remarks: '',
                    CameraRemarksJson: '[]'
                };
                renderItemForm(item, true);
                $('#add-item-dropdown option[value="' + selectedItemId + '"]').remove();
                $('#add-item-dropdown').val('');
            });

            $('body').on('click', '.remove-item-btn', function() {
                var itemForm = $(this).closest('.item-form-instance');
                var itemId = itemForm.data('item-id');
                var itemName = itemForm.find('h6').text();
                var itemCode = itemForm.find('input[name$=".ItemCode"]').val();
                var isCamera = itemForm.find('.is-camera-item').val();
                if ($('#add-item-dropdown option[value="' + itemId + '"]').length === 0) {
                    $('#add-item-dropdown').append($('<option>', {
                        value: itemId,
                        text: itemName,
                        'data-itemname': itemName,
                        'data-itemcode': itemCode,
                        'data-iscamera': isCamera
                    }));
                }
                itemForm.remove();
            });

            function updateItemUI(input) {
                const itemForm = $(input).closest('.item-form-instance');
                const itemIndex = $(input).data('index');
                const existQty = parseInt(itemForm.find('.cam-qty-exist').val()) || 0;
                const reqQty = parseInt(itemForm.find('.cam-qty-req').val()) || 0;
                if (existQty + reqQty > 0) {
                    itemForm.find('.cam-extra-section').slideDown();
                } else {
                    itemForm.find('.cam-extra-section').slideUp();
                }
                if (typeof updateCameraRemarksUI === 'function') {
                    updateCameraRemarksUI(itemIndex);
                }
            }

            $('body').on('click', '.cam-qty-plus, .cam-qty-minus', function() {
                const button = $(this);
                const input = button.siblings('.cam-qty-input');
                let currentValue = parseInt(input.val()) || 0;
                if (button.hasClass('cam-qty-plus')) {
                    currentValue++;
                } else {
                    if (currentValue > 0) currentValue--;
                }
                input.val(currentValue);
                updateItemUI(input);
            });

            $('body').on('input', '.cam-qty-input', function() {
                updateItemUI(this);
            });

            function reindexFormForSubmission(form) {
                const itemForms = form.find('.item-form-instance');
                itemForms.each(function(newIndex, itemForm) {
                    $(itemForm).find('input, textarea, select').each(function() {
                        if (this.name) {
                            this.name = this.name.replace(/\[\d+\]/, '[' + newIndex + ']');
                        }
                        const dataIndex = $(this).data('index');
                        if(dataIndex !== undefined) {
                            $(this).attr('data-index', newIndex);
                        }
                        if(this.id && this.id.includes('_')) {
                           this.id = this.id.replace(/_\d+$/, '_' + newIndex);
                        }
                    });
                });
            }

            $('body').on('submit', '.item-selection-form', function (e) {
                e.preventDefault();
                var form = $(this);
                reindexFormForSubmission(form);

                var submitButton = form.find('button[type="submit"]');
                submitButton.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Saving...');

                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                title: 'Success!',
                                text: response.message,
                                icon: 'success',
                                timer: 1500,
                                showConfirmButton: false
                            });

                            const surveyId = form.find('input[name="SurveyID"]').val();
                            const locId = form.find('input[name="LocID"]').val();
                            const itemTypeId = form.find('input[name="ItemTypeID"]').val();
                            const accordionBody = $(`#accordion-body-${itemTypeId}`);
                            const itemSelectionContainer = form.closest('.item-selection-container');

                            accordionBody.load('@Url.Action("GetAccordionBody", "SurveyDetails")' + `?surveyId=${surveyId}&locId=${locId}&itemTypeID=${itemTypeId}`, function() {
                                itemSelectionContainer.html('');
                            });
                            
                        } else {
                            let message = response.message || 'An error occurred.';
                            if (response.errors) {
                                message += '<ul class="text-start mt-2">';
                                response.errors.forEach(err => { message += `<li>${err}</li>`; });
                                message += '</ul>';
                            }
                            Swal.fire({ icon: 'error', title: 'Error!', html: message });
                            submitButton.prop('disabled', false).html('<i class="bi bi-check-circle me-2"></i> Save All Changes');
                        }
                    },
                    error: function () {
                        Swal.fire('Error!', 'An unexpected server error occurred. Please check the console for details.', 'error');
                        submitButton.prop('disabled', false).html('<i class="bi bi-check-circle me-2"></i> Save All Changes');
                    }
                });
            });

            $('body').on('click', '.cancel-item-selection', function() {
                var container = $(this).closest('.item-selection-container');
                var buttonContainer = container.siblings('.text-center');
                container.html('');
                buttonContainer.show();
            });
        });
    </script>
}