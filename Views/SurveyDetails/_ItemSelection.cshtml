@model SurveyApp.Models.SurveyDetailsUpdate
@{
    var allItems = Model?.ItemLists ?? new List<SurveyApp.Models.SurveyDetailsUpdatelist>();
    var selectedItems = allItems.Where(i => i.ItemQtyExist > 0 || i.ItemQtyReq > 0).ToList();
    var availableItems = allItems.Where(i => !(selectedItems.Select(s => s.ItemID).Contains(i.ItemID))).ToList();
}

<form asp-controller="SurveyDetails" asp-action="UpdateItem" method="post" class="item-selection-form"
    enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SurveyID" />
    <input type="hidden" asp-for="LocID" />
    <input type="hidden" asp-for="ItemTypeID" />

    <div class="add-item-container mb-3 p-3 bg-light border rounded">
        <div class="row align-items-end">
            <div class="col-md-8">
                <label for="add-item-dropdown" class="form-label fw-semibold">Add a new item:</label>
                <select class="form-select" id="add-item-dropdown">
                    <option value="">-- Select an item --</option>
                    @foreach (var item in availableItems)
                    {
                        <option value="@item.ItemID" data-itemname="@item.ItemName" data-itemcode="@item.ItemCode"
                            data-iscamera="@item.IsCamera">@item.ItemName</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-success w-100" id="add-item-btn">
                    <i class="bi bi-plus-circle me-1"></i> Add Item
                </button>
            </div>
        </div>
    </div>

    <div id="selected-items-container">
        <!-- Items that are already selected will be rendered here by JavaScript -->
    </div>

    <div class="row mt-4">
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-check-circle me-2"></i> Save All Changes
            </button>
            <button type="button" class="btn btn-secondary cancel-item-selection">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </button>
        </div>
    </div>
</form>

<script>
    var allItemsData = @Html.Raw(Json.Serialize(allItems));
    var selectedItemsData = @Html.Raw(Json.Serialize(selectedItems));
</script>

<div id="item-form-template" style="display: none;">
    <div class="col-12 item-form-instance" data-item-id="{itemId}" data-item-id-container="{index}">
        <input type="hidden" name="ItemLists[{index}].ItemID" value="{itemId}" />
        <input type="hidden" name="ItemLists[{index}].ItemName" value="{itemName}" />
        <input type="hidden" name="ItemLists[{index}].ItemCode" value="{itemCode}" />
        <input type="hidden" class="is-camera-item" data-index="{index}" value="{isCamera}" />
        <input type="hidden" class="camera-remarks-json" name="ItemLists[{index}].CameraRemarksJson"
            data-item-index="{index}" value="{cameraRemarksJson}" />

        <div class="card shadow-sm mb-3">
            <div class="card-header device-card-header-gradient py-2">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-white fs-6">{itemName}</h6>
                    <button type="button" class="btn-close btn-close-white remove-item-btn" aria-label="Close"></button>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-semibold text-primary mb-2">
                            <i class="bi bi-box-seam me-1"></i>Existing:
                        </label>
                        <div class="d-flex align-items-center">
                            <button type="button" class="btn btn-danger btn-sm me-2 cam-qty-minus" data-target="exist">
                                <i class="bi bi-dash"></i>
                            </button>
                            <input type="number" name="ItemLists[{index}].ItemQtyExist"
                                class="form-control text-center cam-qty-input cam-qty-exist" data-index="{index}"
                                data-type="exist" value="{itemQtyExist}" min="0" style="width: 5.5rem;" />
                            <button type="button" class="btn btn-success btn-sm ms-2 cam-qty-plus" data-target="exist">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-semibold text-success mb-2">
                            <i class="bi bi-plus-circle me-1"></i>Required (To Deploy):
                        </label>
                        <div class="d-flex align-items-center">
                            <button type="button" class="btn btn-danger btn-sm me-2 cam-qty-minus" data-target="req">
                                <i class="bi bi-dash"></i>
                            </button>
                            <input type="number" name="ItemLists[{index}].ItemQtyReq"
                                class="form-control text-center cam-qty-input cam-qty-req" data-index="{index}"
                                data-type="req" value="{itemQtyReq}" min="0" style="width: 5.5rem;" />
                            <button type="button" class="btn btn-success btn-sm ms-2 cam-qty-plus" data-target="req">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Expandable section shown when either quantity > 0 -->
                <div class="cam-extra-section mt-3 pt-3 border-top" style="display: none;">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-camera me-1"></i>Images
                        </label>
                        <input type="file" class="form-control mb-2 cam-upload-input" multiple accept="image/*"
                            style="display:none;" />
                        <div class="d-flex flex-column flex-sm-row gap-2 mb-2">
                            <button type="button" class="btn btn-primary btn-sm cam-take-photo-btn">
                                <i class="bi bi-camera me-1"></i> Take Photo
                            </button>
                            <button type="button" class="btn btn-secondary btn-sm cam-gallery-btn">
                                <i class="bi bi-images me-1"></i> Gallery
                            </button>
                        </div>
                        <div class="cam-preview mt-2 d-flex flex-wrap gap-2" data-item-index="{index}">
                            <!-- Existing images will be shown here -->
                        </div>
                        <input type="hidden" name="ItemLists[{index}].CloudinaryUrls" class="cloudinary-urls-input"
                            value="{cloudinaryUrls}" />
                        <input type="hidden" name="ItemLists[{index}].CloudinaryPublicIds"
                            class="cloudinary-publicids-input" value="{cloudinaryPublicIds}" />
                    </div>

                    <!-- Camera Installation Remarks Section (only for camera items) -->
                    <div class="camera-remarks-section" data-item-index="{index}" style="display: none;">
                        <div class="camera-remarks-inputs-container" id="cameraRemarksInputs_{index}">
                            <!-- Dynamic camera remark inputs will be inserted here by JavaScript -->
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-chat-left-text me-1"></i>Additional Remarks
                        </label>
                        <textarea name="ItemLists[{index}].Remarks" class="form-control"
                            placeholder="Enter additional remarks..." rows="2">{remarks}</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>